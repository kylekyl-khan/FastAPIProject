<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Add-in 唯一識別碼：請沿用現有這組 Id -->
  <Id>19B8F00D-6A60-4344-8E6C-9F2E8F9AC60E</Id>

  <!-- 版本號：你可以視需要調整 -->
  <Version>1.1.0.0</Version>

  <!-- 提供者名稱：改成你們公司或部門名稱 -->
  <ProviderName>通訊錄開發小組</ProviderName>

  <!-- 預設語系改為繁體中文 -->
  <DefaultLocale>zh-TW</DefaultLocale>

  <!-- 外掛名稱與說明（繁體中文） -->
  <DisplayName DefaultValue="通訊錄外掛" />
  <Description DefaultValue="在 Outlook 中整合公司通訊錄功能" />

  <!-- 圖示與支援網址：統一指向 HTTPS 127.0.0.1:8443 -->
  <IconUrl DefaultValue="https://127.0.0.1:8443/static/icon.png" />
  <HighResolutionIconUrl DefaultValue="https://127.0.0.1:8443/static/icon.png" />
  <SupportUrl DefaultValue="https://127.0.0.1:8443/" />

  <!-- 允許被嵌入的網域：本機開發環境 -->
  <AppDomains>
    <AppDomain>https://127.0.0.1:8443</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <!-- 舊版 MailApp 頁面設定：讀信 / 編輯信時右側顯示 Pane -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
      <TabletSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
        <RequestedHeight>250</RequestedHeight>
      </TabletSettings>
      <PhoneSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
      </PhoneSettings>
    </Form>

    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
      <TabletSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
        <RequestedHeight>250</RequestedHeight>
      </TabletSettings>
      <PhoneSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:8443/contacts" />
      </PhoneSettings>
    </Form>
  </FormSettings>

  <!-- 權限保留 ReadWriteItem（之後可依需求縮減） -->
  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="ReadOrEdit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- 新版 Command Surface / Task Pane 設定 -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <!-- 桌面版：讀信 / 編輯信的工具列按鈕 -->
        <DesktopFormFactor>
          <!-- FunctionFile 這裡直接用 Taskpane.Url 佔位即可 -->
          <FunctionFile resid="Taskpane.Url" />

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>

        <!-- 行動版：Mobile Command Surface -->
        <MobileFormFactor>
          <FunctionFile resid="Taskpane.Url" />
          <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
            <Group id="mobileMsgReadGroup">
              <Label resid="GroupLabel" />
              <Control xsi:type="MobileButton" id="mobileMsgReadOpenPaneButton">
                <Label resid="TaskpaneButton.Label" />
                <Icon>
                  <bt:Image size="25" resid="Icon.32x32" />
                  <bt:Image size="32" resid="Icon.32x32" />
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="Taskpane.Url" />
                </Action>
              </Control>
            </Group>
          </ExtensionPoint>
        </MobileFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <!-- 圖示資源 -->
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://127.0.0.1:8443/static/icon.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://127.0.0.1:8443/static/icon.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://127.0.0.1:8443/static/icon.png" />
      </bt:Images>

      <!-- Task Pane 真正載入的 URL：指向 /contacts -->
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://127.0.0.1:8443/contacts" />
      </bt:Urls>

      <!-- 文案資源：改為繁體中文 -->
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="通訊錄" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="顯示通訊錄" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="開啟通訊錄面板" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
